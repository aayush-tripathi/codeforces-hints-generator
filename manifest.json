{
  "manifest_version": 3,
  "name": "Codeforces Hints Generator",
  "version": "1.0",
  "description": "Inject Hint 1â€“5, Observations, and Full Editorial buttons on any Codeforces problem (contest or problemset), using Gemini.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/contest/*/problem/*",
        "https://codeforces.com/problemset/problem/*/*"
      ],
       "js": ["content_script.js"],
      "css": ["styles.css"]
    }
  ],
   "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
